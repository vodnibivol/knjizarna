<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head", { title: "domov" }); %>

    <style>
      .container {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 2rem;
        text-align: center;
        width: 300px;
      }

      input[type="text"] {
        border: 1px dashed;
      }
      
      input[type="text"]:focus {
        border: 1px solid;
      }

      .container img {
        width: 100%;
        border: thick ridge;
        object-fit: cover;
      }
    </style>
  </head>

  <% const strings = {
    lang: 'en',
    en: {
      search: 'search',
      input_placeholder: 'name, author ..',
    },
    slo: {
      search: 'iskanje',
      input_placeholder: 'ime, avtor ..',
    },
  } %>

  <body>
    <%- include("../partials/nav") %>

    <div class="container">
      <img src="/knjizarna/public/img/silentivm.jpg" alt="medieval schola">
      <h2><%- strings[strings.lang].search %></h2>
      <form action="/knjizarna/iskanje">
        <input type="text" placeholder="<%- strings[strings.lang].input_placeholder %>" name="q" id="q" autocomplete="off" required />
        <input type="submit" value="ok" />
      </form>
    </div>

    <script>
      window.onload = () => $('input[type="text"]').select();
    </script>

    <%- include("../partials/footer") %>
  </body>
</html>
